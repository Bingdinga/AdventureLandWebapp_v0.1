@model IEnumerable<AdventureLandWebapp.Models.TICKET>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Purchase_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valid_Through)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Purchase_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valid_Through)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TicketID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TicketID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TicketID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
